@model Praca_Inżynierska.ViewModels.OrderViewModel
<link rel="stylesheet" href="~/css/LabelStyle.css" />
@{
    ViewData["Title"] = "EditOrder";
}

<h2 style="text-align:center">Edycja zamówienia</h2>
<div class="container">

    <div class="content">
        <form asp-action="EditOrder">
            <div class="title">Przedmiot do przesyłki </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="user-details">
                <div class="input-box">
                    <label asp-for="Product.Weight" class="details"></label>
                    <input asp-for="Product.Weight"  placeholder="Wprowadz ..." required />
                    <span asp-validation-for="Product.Weight" class="text-danger"></span>
                </div>
                <div class="input-box">
                    <label asp-for="Product.Height" class="details"></label>
                    <input asp-for="Product.Height"  placeholder="Wprowadz ..." required />
                    <span asp-validation-for="Product.Height" class="text-danger"></span>
                </div>

                <div class="input-box">
                    <label asp-for="Product.Length" class="details"></label>
                    <input asp-for="Product.Length"  placeholder="Wprowadz ..." required />
                    <span asp-validation-for="Product.Length" class="text-danger"></span>
                </div>

                <div class="input-box">
                    <label asp-for="Product.Width" class="details"></label>
                    <input asp-for="Product.Width"  placeholder="Wprowadz ..." required />
                    <span asp-validation-for="Product.Width" class="text-danger"></span>
                </div>

                <div class="input-box">
                    <label asp-for="Product.Count" class="details"></label>
                    <input asp-for="Product.Count" type="number" placeholder="Wprowadz ..." required />
                    <span asp-validation-for="Product.Count" class="text-danger"></span>
                </div>

                <div class="input-box">
                    <label asp-for="Product.Details" class="details"></label>
                    <input asp-for="Product.Details" type="text" placeholder="Wprowadz ..." required />
                    <span asp-validation-for="Product.Details" class="text-danger"></span>
                </div>
            </div>
            <div class="title">Nadawca </div>
            <div class="user-details">
                <div class="input-box">
                    <label asp-for="Sender.Name" class="details"></label>
                    <input asp-for="Sender.Name" type="text" placeholder="Wprowadz ..." required />
                    <span asp-validation-for="Sender.Name" class="text-danger"></span>
                </div>
                <div class="input-box">
                    <label asp-for="Sender.Surname" class="details"></label>
                    <input asp-for="Sender.Surname" type="text" placeholder="Wprowadz ..." required />
                    <span asp-validation-for="Sender.Surname" class="text-danger"></span>
                </div>
                <div class="input-box">
                    <label asp-for="Sender.PhoneNumber" class="details"></label>
                    <input asp-for="Sender.PhoneNumber" type="text" placeholder="Wprowadz ..." required />
                    <span asp-validation-for="Sender.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="input-box">
                    <label asp-for="Sender.Email" class="details"></label>
                    <input asp-for="Sender.Email" type="text" placeholder="Wprowadz ..." required />
                    <span asp-validation-for="Sender.Email" class="text-danger"></span>
                </div>
                <div class="input-box">
                    <label asp-for="Sender.City" class="details"></label>
                    <input asp-for="Sender.City" type="text" placeholder="Wprowadz ..." required />
                    <span asp-validation-for="Sender.City" class="text-danger"></span>
                </div>
                <div class="input-box">
                    <label asp-for="Sender.Street" class="details"></label>
                    <input asp-for="Sender.Street" type="text" placeholder="Wprowadz ..." required />
                    <span asp-validation-for="Sender.Street" class="text-danger"></span>
                </div>
                <div class="input-box">
                    <label asp-for="Sender.Number" class="details"></label>
                    <input asp-for="Sender.Number" type="text" placeholder="Wprowadz ..." required />
                    <span asp-validation-for="Sender.Number" class="text-danger"></span>
                </div>
                <div class="input-box">
                    <label asp-for="Sender.ZIPcode" class="details"></label>
                    <input asp-for="Sender.ZIPcode" type="text" placeholder="Wprowadz ..." required />
                    <span asp-validation-for="Sender.ZIPcode" class="text-danger"></span>
                </div>
            </div>
            <div class="title">Odbiorca </div>
            <div class="user-details">
                <div class="input-box">
                    <label asp-for="Receiver.Name" class="details"></label>
                    <input asp-for="Receiver.Name" type="text" placeholder="Wprowadz ..." required />
                    <span asp-validation-for="Receiver.Name" class="text-danger"></span>
                </div>
                <div class="input-box">
                    <label asp-for="Receiver.Surname" class="details"></label>
                    <input asp-for="Receiver.Surname" type="text" placeholder="Wprowadz ..." required />
                    <span asp-validation-for="Receiver.Surname" class="text-danger"></span>
                </div>
                <div class="input-box">
                    <label asp-for="Receiver.PhoneNumber" class="details"></label>
                    <input asp-for="Receiver.PhoneNumber" type="text" placeholder="Wprowadz ..." required />
                    <span asp-validation-for="Receiver.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="input-box">
                    <label asp-for="Receiver.Email" class="details"></label>
                    <input asp-for="Receiver.Email" type="text" placeholder="Wprowadz ..." required />
                    <span asp-validation-for="Receiver.Email" class="text-danger"></span>
                </div>
                <div class="input-box">
                    <label asp-for="Receiver.City" class="details"></label>
                    <input asp-for="Receiver.City" type="text" placeholder="Wprowadz ..." required />
                    <span asp-validation-for="Receiver.City" class="text-danger"></span>
                </div>
                <div class="input-box">
                    <label asp-for="Receiver.Street" class="details"></label>
                    <input asp-for="Receiver.Street" type="text" placeholder="Wprowadz ..." required />
                    <span asp-validation-for="Receiver.Street" class="text-danger"></span>
                </div>
                <div class="input-box">
                    <label asp-for="Receiver.Number" class="details"></label>
                    <input asp-for="Receiver.Number" type="text" placeholder="Wprowadz ..." required />
                    <span asp-validation-for="Receiver.Number" class="text-danger"></span>
                </div>
                <div class="input-box">
                    <label asp-for="Receiver.ZIPcode" class="details"></label>
                    <input asp-for="Receiver.ZIPcode" type="text" placeholder="Wprowadz ..." required />
                    <span asp-validation-for="Receiver.ZIPcode" class="text-danger"></span>
                </div>
            </div>

            <div class="button">
                <input type="submit" value="Edytuj">
            </div>
        </form>
    </div>
</div>