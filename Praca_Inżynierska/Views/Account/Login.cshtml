@model Praca_Inżynierska.ViewModels.LoginViewModel
<link rel="stylesheet" href="~/css/LabelStyle.css" />
@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="content">
        <div class="title">Zaloguj</div>
        <p style="color:red;font-size:14px;text-decoration:underline;">@ViewBag.Message</p>
        <form asp-action="Login" asp-controller="Account" method="post">
            <div class="login-details">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="input-box">
                    <label asp-for="Login" class="details"></label>
                    <input asp-for="Login" type="text" placeholder="Login" required />
                    <span asp-validation-for="Login" class="text-danger"></span>
                </div>
                <div class="input-box">
                    <label asp-for="Password" class="details"></label>
                    <input asp-for="Password"  placeholder="Hasło" required />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="RememberMe" /> @Html.DisplayNameFor(model => model.RememberMe)
                    </label>
                </div>
            </div>
                <div class="button">
                    <input type="submit" value="Zaloguj" class="btn btn-primary" id="myButton" />
                </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
