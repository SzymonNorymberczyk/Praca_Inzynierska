@model Praca_Inżynierska.ViewModels.RegisterViewModel
    <link rel="stylesheet" href="~/css/LabelStyle.css" />
@{
    ViewData["Title"] = "Register";
}

<div class="container">
    <div class="content">
        <div class="title">Rejestracja</div>


        <form asp-action="Register">
            <div class="user-details">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="input-box">
                    <label asp-for="FirstName" class="details"></label>
                    <input asp-for="FirstName" placeholder="Imie" required />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="input-box">
                    <label asp-for="LastName" class="details"></label>
                    <input asp-for="LastName" placeholder="Nazwisko" required />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="input-box">
                    <label asp-for="Login" class="details"></label>
                    <input asp-for="Login" placeholder="Login" required />
                    <span asp-validation-for="Login" class="text-danger"></span>
                </div>
                <div class="input-box">
                    <label asp-for="Email" class="details"></label>
                    <input asp-for="Email" placeholder="Email" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="input-box">
                    <label asp-for="Password" class="details"></label>
                    <input asp-for="Password" placeholder="Hasło" required />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="input-box">
                    <label asp-for="ConfrirmPassword" class="details"></label>
                    <input asp-for="ConfrirmPassword" placeholder="Powtórz hasło" required />
                    <span asp-validation-for="ConfrirmPassword" class="text-danger"></span>
                </div>



                <div class="button">
                    <input type="submit" value="Zarejestruj" class="btn btn-primary" id="myButton" />
                </div>
            </div>
        </form>
    </div>
</div>


    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
