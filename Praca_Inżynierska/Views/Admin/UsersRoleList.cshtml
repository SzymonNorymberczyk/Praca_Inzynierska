@model List<Praca_Inżynierska.ViewModels.UserRoleViewModel>

@{
    var roleId = ViewBag.roleId;
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<form method="post">
    <div class="container">
        <div class="card-header">
            <h2>Dodaj lub usuń użytkownika z tej roli</h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].UserId" />
                    <input type="hidden" asp-for="@Model[i].UserName" />
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].IsSelected">
                        @Model[i].UserName
                    </label>
                </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" value="Zaktualizuj" class="btn btn-primary"
                   style="width:auto" />
            <a asp-action="EditRole" asp-route-id="@roleId"
               class="btn btn-primary" style="width:auto">Anuluj</a>
        </div>
    </div>
</form>